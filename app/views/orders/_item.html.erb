<tr>
  <td>
    <%= image_tag image.tiny%> 
  </td>
  <td>
    <h4><%= name %></h4> 
    <br>
    <p><%= description %></p> 
  </td>
  <td>
    <%= humanized_money_with_symbol price / 100.0 %> 
  </td>
  <td>
    <%= quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol price * quantity / 100.0 %>
  </td>
</tr>
